# ==============================================================================

brew install automake
brew install coreutils
brew install libksba
brew install libyaml
brew install nvm
brew install php
brew install pkg-config
brew install zlib
brew install openssl@3
brew install jq

# Remove outdated versions from the cellar
brew cleanup